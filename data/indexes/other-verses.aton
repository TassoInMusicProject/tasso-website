@OTTAVA:       	16	
@TITLE:		"Lasso," dicea, "Perché venisti Amore
@MANUSRC:	none
@PRINTSRC:	1562S, 1570S, 1581O, 1582O, 1582M, 1583M, 1583V, 1585C, 1585V, 1585Vbis, 1589B, 1608DP, 1618B, 1621D, 1637M
@@BEGIN:	VERSES
@ABOUTIT:	
@ABOUTEN:	
@EDITOR:	Angelo Solerti
