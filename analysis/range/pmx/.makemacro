# Filename:      makemacro
# Syntax:        perl 5
#
# Description:   Create a SCORE macro which will print all given MUS files.
#
# ./makemacro *.mus
# 

use strict;

my @list = @ARGV;

foreach my $file (sort @list) {
	$file =~ s/^T[a-z][a-z]//;  # Only 8 characters allowed in MS-DOS filenames.
   my $base = $file;
   $base =~ s/\.[^.]*$//;
   print "RS\n";
   print "RE $file\n";
   print "PRINT\n";
   print "1 $base\n";
   print "4 0.5 5.0\n";
   print "G\n";
   print "\n";
}


